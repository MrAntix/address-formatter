<div class="panel panel-default" ng-show="$parent.selected">

    <div class="panel-heading">
        <h2 class="panel-title">{{$parent.selected.display}}</h2>
    </div>

    <div class="panel-body">

        <div class="form-group">
            <div class="lines col-xs-8">
                <div class="line form-control"
                    ng-repeat="line in $parent.selected.lines">
                    {{line.prefix}}
                    <div class="element"
                        ui-draggable="true" drag="element"
                        on-drop-success="remove(element, line.elements)"
                        ui-on-drop="drop($data,line,element)"
                        ng-repeat="element in line.elements">
                        <div>
                            {{element.prefix}}
                        &lt;{{element.name}}&gt;
                        {{element.suffix}}
                        <span aria-hidden="true"
                            ng-click="clear(element,line.elements)">&times;</span>
                        </div>
                </div>
                {{line.suffix}}
                    <div class="element-drop" ui-on-drop="drop($data,line)"></div>
            </div>
        </div>

        <div class="col-xs-4">
            <div class="element"
                ui-draggable="true" drag="element" on-drop-success="remove(element,$parent.selected.allElements)"
                ng-repeat="element in $parent.selected.allElements">
                <div>
                    {{element.prefix}}
                    &lt;{{element.name}}&gt;
                        {{element.suffix}}
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel-footer">
    <button class="btn btn-danger" ng-click="delete()">Delete</button>
</div>
</div>
