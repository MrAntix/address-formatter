<div class="panel panel-default" ng-show="$parent.selected">

    <div class="panel-heading">
        <h2 class="panel-title">{{$parent.selected.display}}</h2>
    </div>

    <div class="panel-body">

        <div class="form-group">
            <div class="lines col-xs-8">
                <div class="input-group"
                    ng-repeat="line in $parent.selected.lines">
                    <span class="input-group-addon">{{$index}}
                    </span>
                    <div class="line form-control" ui-on-drop="drop($data,line)">
                        <div class="element"
                            ui-draggable="true" drag="element" on-drop-success="remove(element, line.elements)"
                            ng-repeat="element in line.elements">
                            {{element.prefix}}
                            &lt;{{element.name}}&gt;
                            {{element.suffix}}
                            <span aria-hidden="true" 
                                ng-click="clear(element,line.elements)">&times;</span>
                        </div>
                        {{line.separator}}
                    </div>
                    <a href class="input-group-addon">&hellip;
                    </a>
                </div>
            </div>

            <div class="col-xs-4">
                <span class="element"
                      ui-draggable="true" drag="element" on-drop-success="remove(element,$parent.selected.allElements)"
                      ng-repeat="element in $parent.selected.allElements">
                    {{element.prefix}}
                    &lt;{{element.name}}&gt;
                    {{element.suffix}}
                </span>
            </div>
        </div>
</div>

<div class="panel-footer">
    <button class="btn btn-primary">Save</button>
</div>
</div>
